@model List<Model.DataModel.tblBreakTime>
@{
    //ViewBag.Title = Resources.Language.BreakTime;
    //ViewBag.SubTitle = Resources.Language.List + " " + ViewBag.Title;
}
@section header{
    @ViewBag.SubTitle
}

@*@Styles.Render("~/AdminLTE/plugins/datatables/css")*@
<h3 style="margin-top: -10px;">@Resources.Language.List @Resources.Language.BreakTime</h3>

<div class="row">
    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fa fa-plus-circle"></i>&nbsp; @Resources.Language.Create &nbsp;
                    </a>
                </div>
            </div>
            <div class="box-body">
                <table id="EventDeflist" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@Resources.Language.Name</th>
                            <th>@Resources.Language.Start</th>
                            <th>@Resources.Language.Finish</th>
                            <th>@Resources.Language.TotalDuration (@Resources.Language.Minute)</th>
                            @*<th style="width: 20%">@Resources.Language.Action</th>*@
                        </tr>
                    </thead>
                    @if (Model.Count > 0)
                    {
                        var iCount = 1;
                        <tbody>
                            @foreach (var ev in Model)
                            {
                                <tr>
                                    <td>@iCount</td>
                                    <td>@ev.Name</td>
                                    <td>@ev.StartHour.ToString("00"):@ev.StartMinute.ToString("00") </td>
                                    <td>@ev.FinishHour.ToString("00"):@ev.FinishMinute.ToString("00") </td>
                                    <td>@ev.TotalMinute</td>

                                    <td>
                                        @*@Html.ActionLink("Edit ", "Edit", new { EventDefID = dr["Id"].ToString() }, new { @class = "btn  btn-primary" })*@
                                        <a href="/BreakTime/Edit/@ev.Id" class="btn btn-primary  btn-xs">
                                            <i class="fa fa-pencil"></i>&nbsp; @Resources.Language.Edit &nbsp;&nbsp;
                                        </a>
                                        &nbsp;
                                        <a href="/BreakTime/Delete/@ev.Id" class="btn btn-danger  btn-xs" onclick="return confirm('@Resources.Language.DeleteConfirm')">
                                            <i class="fa fa-trash"></i> &nbsp;@Resources.Language.Delete&nbsp;&nbsp;
                                        </a>
                                    </td>
                                </tr>
                                iCount++;
                            }
                        </tbody>
                    }

                </table>
            </div>
        </div>

    </div>
</div>
