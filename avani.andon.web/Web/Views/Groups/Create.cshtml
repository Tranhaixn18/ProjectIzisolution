@model avSVAW.Models.GroupForm
@{

   @* ViewBag.Title = Resources.Language.MenuGroup;
    ViewBag.SubTitle = Resources.Language.Create + " " + ViewBag.Title;*@
}
@section header{
    @ViewBag.SubTitle
}
<h3 style="margin-top: -10px;">@Resources.Language.Create @Resources.Language.MenuGroup</h3>

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            @using (Html.BeginForm("Create", "Groups", FormMethod.Post, new { @class = "form-horizontal form-label-left", @id = "frmValidate", enctype = "multipart/form-data" }))
            {
                <div class="box-body">
                    <input type="hidden" name="ID" class="form-control" value="@Model.Id" />
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.Name, Resources.Language.Name, new { @class = "control-label required" })
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.Description, Resources.Language.Description, new { @class = "control-label" })
                        </div>
                        <div class="col-md-10 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(model => model.Description, htmlAttributes: new { @class = "form-control col-md-7 col-xs-12" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.iStatus, Resources.Language.IsActive, new { @class = "control-label" })
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.CheckBoxFor(model => model.iStatus, htmlAttributes: new { @class = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            @Html.LabelFor(model => model.Role, Resources.Language.Role, new { @class = "control-label required" })
                        </div>
                        <div class="col-sm-3">
                            @Html.DropDownListFor(model => model.Role, Model.Roles, new { @class = "form-control", @required = "required" })
                        </div>
                    </div>

                    <input type="hidden" id="CustomerId" name="CustomerId" value="@ViewBag.CustomerId" />

                    <!-- /.box-body -->
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-6">
                            <a href="/Groups/Index">
                                <button class="btn btn-default" type="button">@Resources.Language.Back</button>
                            </a>
                            <button type="submit" class="btn btn-success">@Resources.Language.Save</button>&nbsp;

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/assets/js/jquery.validate.js"></script>
<script src="~/assets/js/fontawesome-iconpicker.js"></script>
<script>
    $('#frmValidate').validate({ // initialize the plugin
        rules: {
            Name: {
                required: true
            },
        },
        submitHandler: function (form) {
            form.submit();
        }
    });
</script>
