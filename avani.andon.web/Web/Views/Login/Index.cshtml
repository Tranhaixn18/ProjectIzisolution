
@{
    Layout = null;
}

@model avSVAW.Models.LoginModel

@*@using avSVAW.Common*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <!-- Meta, title, CSS, favicons, etc. -->

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Smart Factory System</title>
    <link rel="icon" type="image/png" sizes="192x192" href="~/assets/img/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/assets/img/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/img/favicon-16x16.png">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/assets/css/custom.min.css" rel="stylesheet" />

</head>
<body class="login">
    <div class="col-md-12" style="text-align:center;padding-top:15px;">
        <img src="/assets/img/logo-kangaroo.png" />
    </div>
    <div class="row">
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        <form>
                            <h1>Đăng nhập</h1>
                            <div class="col-md-10">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                @*@Html.TextBoxFor(model => model.UserName, new { data_autocomplete_url = Url.Action("Autocomplete"), @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "autofocus" })*@

                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-default submit">Đăng nhập</button>
                            </div>
                            <div class="clearfix"></div>
                            <div class="separator">

                                <div class="clearfix"></div>
                                <br>
                                <div>
                                    <p><b>KANGAROO GROUP</b></p>
                                    <p>©2021 All Rights Reserved.</p>
                                    <br />
                                    <p><b>Powered by <a href="https://izisolution.vn" target="_blank">IZISolution</a></b></p>
                                </div>
                            </div>
                        </form>
                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>