<header class="main-header">
    @{ var session = (Model.DataModel.tblUser)Session[Common.GlobalConstants.USER_SESSION];
        var sessionLange = Session[Common.GlobalConstants.LANG_SESSION];
        var key = "vietnam.png";
        string lang = "";
        if (sessionLange != null)
        {
            lang = Convert.ToString(sessionLange);
            if (lang.ToLower().CompareTo("vi") == 0 || string.IsNullOrEmpty(lang))
            {
                key = "vietnam.png";
            }
            else if (lang.ToLower().CompareTo("en") == 0 || string.IsNullOrEmpty(lang))
            {
                key = "uk.png";
            }

        } }
    @if (session != null)
    {<!-- Logo -->
        <a href="/Home/Index" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><img src="/assets/img/favicon-small1.png" alt="..." style="width: 80%"></span>
            <!-- logo for regular state and mobile devices -->
            @*<span class="logo-lg"><img src="/assets/img/logo.png" alt="..." style="width: 80%"></span>*@
            <span class="logo-lg"><img src="/assets/img/logo2.png" alt="..." style="width: 80%"></span>
        </a> <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">

                    <li class="dropdown user user-menu">
                        <a href="#" class=" dropdown-toggle" data-toggle="dropdown">

                            @if (!string.IsNullOrEmpty(@session.Avatar))
                            {
                                <img src="~/Uploads/Avatar/@session.Avatar" class="user-image" alt="User Image"> }
                            else
                            {
                                <img src="/assets/img/user.png" class="user-image" alt="">
                            }

                            <span class="hidden-xs">@session.FullName</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="user-header">
                                @if (!string.IsNullOrEmpty(@session.Avatar))
                                {
                                    <img src="~/Uploads/Avatar/@session.Avatar" class="img-circle" alt="User Image"> }
                                else
                                {
                                    <img src="~/assets/img/user.png" class="img-circle" alt="">
                                }
                                <p>@session.FullName <small>@session.UserName</small></p>
                            </li>

                            <li class="user-footer">
                                <div class="pull-left">
                                    <a class="btn btn-default btn-flat" href="/User/ChangeInfor/@session.ID">Đổi thông tin</a>
                                </div>
                                <div class="pull-right">
                                    <a class="btn btn-default btn-flat" href="/User/ChangePassword/@session.ID">Đổi mật khẩu</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- Control Sidebar Toggle Button -->
                    <li>
                        <a href="/Login/Logout"><i class="fa fa-sign-out"></i></a>
                    </li>

                </ul>
            </div>
        </nav>}
    <input type="hidden" id="langId" name="langId" value="@lang" />
</header>
