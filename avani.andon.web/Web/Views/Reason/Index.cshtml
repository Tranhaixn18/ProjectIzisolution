@model List<Model.DataModel.tblEventReason>
@{
//ViewBag.Title = Resources.Language.Reason;
//ViewBag.SubTitle = Resources.Language.List + " " + Resources.Language.Reason;
}
@section header{
    @ViewBag.SubTitle
}

<h3 style="margin-top: -10px;">@Resources.Language.List @Resources.Language.Reason </h3>

<div class="row">
    <div class="col-xs-12">

        <div class="box">
            <div class="box-header">
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fa fa-plus-circle"></i>&nbsp; @Resources.Language.Create &nbsp;
                    </a>
                </div>
            </div>
            <div class="box-body">
                <table id="EventDeflist" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>@Resources.Language.Name</th>
                            <th>@Resources.Language.Order</th>
                            <th>@Resources.Language.Description</th>
                            <th style="width: 20%;">@Resources.Language.Action</th>
                        </tr>
                    </thead>
                    @if (Model.Count > 0)
                    {
                        var i = 1;
                        <tbody>
                            @foreach (var f in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@f.Name</td>
                                    <td>@f.nOrder</td>
                                    <td>@f.Description </td>
                                    <td>
                                        <a href="/Reason/Edit/@f.Id" class="btn btn-primary  btn-xs">
                                            <i class="fa fa-pencil"></i>&nbsp; @Resources.Language.Edit &nbsp;&nbsp;
                                        </a>
                                        &nbsp;
                                        <a href="/Reason/Delete/@f.Id" class="btn btn-danger  btn-xs" onclick="return confirm('@Resources.Language.DeleteConfirm')">
                                            <i class="fa fa-trash"></i> &nbsp;@Resources.Language.Delete&nbsp;&nbsp;
                                        </a>
                                    </td>
                                </tr>
                                i = i + 1;
                            }
                        </tbody>
                    }

                </table>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script type="text/javascript">

    </script>
}
